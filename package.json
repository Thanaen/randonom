{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "remix build",
    "dev": "node -r dotenv/config ./node_modules/@remix-run/dev/cli.js",
    "postinstall": "remix setup node",
    "deploy": "fly deploy --remote-only",
    "start": "remix-serve build",
    "lint": "eslint --ext .ts,.tsx,.json && prettier --check **/*.{ts,tsx,json}",
    "lint-fix": "eslint --fix --ext .ts,.tsx,.json && prettier --write **/*.{ts,tsx,json}",
    "prepare": "husky install"
  },
  "dependencies": {
    "@azure/cosmos": "^3.15.1",
    "@heroicons/react": "^1.0.5",
    "@mantine/core": "^3.6.7",
    "@mantine/hooks": "^3.6.7",
    "@mantine/notifications": "^3.6.7",
    "@mantine/ssr": "^3.6.7",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "dotenv": "^16.0.0",
    "nanoid": "^3.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@remix-run/dev": "^1.1.3",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{ts,tsx}": "tsc -p tsconfig.json --noEmit",
    "*.{ts,tsx,json}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
